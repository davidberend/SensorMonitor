<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/textAccelerometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accelerometer"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />

                <Switch
                    android:id="@+id/switchAccelerometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
                    
            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/textGyroscope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gyroscope"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true" />
                
                <Switch
                    android:id="@+id/switchGyroscope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/textProximity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proximity"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <Switch
                    android:id="@+id/switchProximity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/textMagnetometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Magnetometer"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <Switch
                    android:id="@+id/switchMagnetometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/textBarometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Barometer"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <Switch
                    android:id="@+id/switchBarometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/textAmbientLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ambient Light"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <Switch
                    android:id="@+id/switchAmbientLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >


            </RelativeLayout>
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" >

                <TextView
                    android:id="@+id/texttest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="test"
                    android:textSize="20sp"
                    android:textColor="#424242"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" />

                <Switch
                    android:id="@+id/switchtest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button1"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="50dp"
            android:background="#aaaaaa"
            android:text="1"
            android:textSize="32dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button2"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="205dp"
            android:background="#aaaaaa"
            android:text="2"
            android:textSize="32dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="205dp"
            android:layout_marginRight="50dp"
            android:background="#aaaaaa"
            android:text="3"
            android:textSize="32dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="265dp"
            android:layout_marginLeft="50dp"
            android:background="#aaaaaa"
            android:text="4"
            android:textSize="32dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="265dp"
            android:background="#aaaaaa"
            android:text="5"            
            android:textSize="32dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button6"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="265dp"
            android:layout_marginRight="50dp"
            android:background="#aaaaaa"
            android:text="6"
            android:textSize="32dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button7"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="325dp"
            android:layout_marginLeft="50dp"
            android:background="#aaaaaa"
            android:text="7"
            android:textSize="32dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button8"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325dp"
            android:background="#aaaaaa"
            android:text="8"
            android:textSize="32dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button9"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="325dp"
            android:layout_marginRight="50dp"
            android:background="#aaaaaa"
            android:text="9"
            android:textSize="32dp"
            android:textColor="#000000" />
        <Button
            android:id="@+id/button0"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="385dp"
            android:background="#aaaaaa"
            android:text="0"
            android:textSize="32dp"
            android:textColor="#000000" />
        
    </RelativeLayout>
    
    <Button
        android:id="@+id/buttonRecord"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#ffffff"
        android:text="@string/recordButtonStart"
        android:textColor="@color/blue" />


</RelativeLayout>
